<?xml version="1.0" encoding="utf-8"?>
<!--添加挂靠企业资料-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_background"
              android:orientation="vertical"
              tools:context=".ui.certification.enterprise.AttachEnterpriseDetailActivity">

    <include layout="@layout/partial_action_bar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lltContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/regular_dimen_x20"
            android:layout_marginRight="@dimen/regular_dimen_x20"
            android:layout_marginTop="@dimen/regular_dimen_x50"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:paddingBottom="@dimen/regular_dimen_x20">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/regular_dimen_x50"
                android:gravity="center"
                android:text="海道企服有限公司"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_23"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/regular_dimen_x5"
                android:gravity="center"
                android:text="企业法人：小李总"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_14"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/regular_dimen_x40"
                android:orientation="vertical"
                android:paddingLeft="@dimen/regular_dimen_x25"
                android:paddingRight="@dimen/regular_dimen_x25"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/regular_dimen_x5"
                    android:gravity="left"
                    android:text="企业法人：小李总"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_size_16"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/regular_dimen_x10"
                    android:gravity="left"
                    android:text="所在地：中国 江苏 无锡"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_size_16"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/regular_dimen_x10"
                    android:gravity="left"
                    android:text="注册号：**************124242"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_size_16"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/regular_dimen_x10"
                    android:gravity="left"
                    android:text="营业期限：2017-12-31"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_size_16"
                    />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/regular_dimen_x20"
                    android:layout_marginRight="@dimen/regular_dimen_x20"
                    android:layout_marginTop="@dimen/regular_dimen_x30"
                    android:background="@android:color/black"
                    android:text="确认挂靠"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_14"
                    />
            </LinearLayout>
        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignTop="@id/lltContent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-40dp"
            android:src="@mipmap/ic_launcher"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/lltContent"
            android:layout_alignTop="@id/lltContent"
            android:background="#3BCD98"
            android:drawablePadding="@dimen/regular_dimen_x5"
            android:drawableTop="@drawable/ic_check_white_24dp"
            android:padding="@dimen/regular_dimen_x5"
            android:paddingTop="@dimen/regular_dimen_x10"
            android:text="挂靠成功"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_12"
            />
    </RelativeLayout>
</LinearLayout>