<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_grey"
    android:orientation="vertical">

    <include layout="@layout/partial_action_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linUserHead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/regular_dimen_x15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="头像"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_size_14" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="@dimen/regular_dimen_x80"
                    android:layout_height="@dimen/regular_dimen_x80"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawablePadding="@dimen/regular_dimen_x5"
                    android:drawableRight="@drawable/ic_keyboard_arrow_right_24dp"
                    android:gravity="center_vertical|left"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="@dimen/text_size_12" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rlUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/regular_dimen_x5"
                android:background="@color/bg_white"
                android:paddingBottom="@dimen/regular_dimen_x8"
                android:paddingLeft="@dimen/regular_dimen_x10"
                android:paddingRight="@dimen/regular_dimen_x10"
                android:paddingTop="@dimen/regular_dimen_x8">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:text="用户名"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawablePadding="@dimen/regular_dimen_x5"
                    android:drawableRight="@drawable/ic_keyboard_arrow_right_24dp"
                    android:gravity="center_vertical|left"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="@dimen/text_size_12" />
            </RelativeLayout>

            <View style="@style/normal_line_horizontal" />

            <RelativeLayout
                android:id="@+id/rlModifyPs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_white"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/regular_dimen_x8"
                android:paddingLeft="@dimen/regular_dimen_x10"
                android:paddingRight="@dimen/regular_dimen_x10"
                android:paddingTop="@dimen/regular_dimen_x8">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:text="修改密码"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawablePadding="@dimen/regular_dimen_x5"
                    android:drawableRight="@drawable/ic_keyboard_arrow_right_24dp"
                    android:gravity="center_vertical|left"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="@dimen/text_size_12" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/regular_dimen_x10"
                android:background="@color/bg_white"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/regular_dimen_x8"
                android:paddingLeft="@dimen/regular_dimen_x15"
                android:paddingRight="@dimen/regular_dimen_x15"
                android:paddingTop="@dimen/regular_dimen_x8">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/ic_keyboard_arrow_right_24dp"
                    android:gravity="center_vertical"
                    android:text="QQ"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical|left"
                    android:text="绑定"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="@dimen/text_size_14" />
            </RelativeLayout>

            <View style="@style/normal_line_horizontal" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_white"
                android:paddingBottom="@dimen/regular_dimen_x8"
                android:paddingLeft="@dimen/regular_dimen_x15"
                android:paddingRight="@dimen/regular_dimen_x15"
                android:paddingTop="@dimen/regular_dimen_x8">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/ic_keyboard_arrow_right_24dp"
                    android:gravity="center_vertical"
                    android:text="微信"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical|left"
                    android:text="绑定"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="@dimen/text_size_14" />
            </RelativeLayout>

            <View style="@style/normal_line_horizontal" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_white"
                android:paddingBottom="@dimen/regular_dimen_x8"
                android:paddingLeft="@dimen/regular_dimen_x15"
                android:paddingRight="@dimen/regular_dimen_x15"
                android:paddingTop="@dimen/regular_dimen_x8">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/ic_keyboard_arrow_right_24dp"
                    android:gravity="center_vertical"
                    android:text="手机"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical|left"
                    android:text="绑定"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="@dimen/text_size_14" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>