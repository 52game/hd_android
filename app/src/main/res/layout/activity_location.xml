<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.haidaoservice.yhs.ui.location.LocationActivity">
    <LinearLayout
        android:background="@color/signBg"
        android:paddingTop="25dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="75dp">
        <TextView
            android:textColor="@color/sign_text_white"
            android:paddingLeft="16dp"
            android:textSize="20dp"
            android:gravity="center_vertical"
            android:text="关闭"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <EditText
            android:gravity="center"
            android:textSize="12dp"
            android:hint="请输入城市名称或首字母"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:padding="5dp"
                android:layout_marginTop="20dp"
                android:text="当前定位城市"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_location_now"
                android:textColor="@drawable/location_text_color"
                android:clickable="true"
                 android:focusable="true"
                android:focusableInTouchMode="true"
                android:background="@drawable/location_tv_frame_sel"
                android:gravity="center"
                android:text="南京"
                android:layout_width="80dp"
                android:layout_height="40dp" />
            <TextView
                android:padding="5dp"
                android:text="常用城市"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:clickable="true"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:background="@drawable/location_tv_frame_sel"
                        android:gravity="center"
                        android:text="扬州"
                        android:layout_width="80dp"
                        android:layout_height="40dp" />
                    <TextView
                        android:clickable="true"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:textColor="@drawable/location_text_color"
                        android:background="@drawable/location_tv_frame_sel"
                        android:layout_marginLeft="20dp"
                        android:gravity="center"
                        android:text="苏州"
                        android:layout_width="80dp"
                        android:layout_height="40dp" />
                </LinearLayout>
            <TextView
                android:padding="5dp"
                android:text="热门城市"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:clickable="true"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:textColor="@drawable/location_text_color"
                        android:background="@drawable/location_tv_frame_sel"
                        android:gravity="center"
                        android:text="北京"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="40dp" />
                    <TextView
                        android:clickable="true"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:textColor="@drawable/location_text_color"
                        android:background="@drawable/location_tv_frame_sel"
                        android:layout_marginLeft="20dp"
                        android:gravity="center"
                        android:text="上海"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="40dp" />
                    <TextView

                        android:clickable="true"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:textColor="@drawable/location_text_color"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/location_tv_frame_sel"
                        android:gravity="center"
                        android:text="广州"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="40dp" />

                    <TextView
                        android:clickable="true"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:id="@+id/textView2"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/location_tv_frame_sel"
                        android:gravity="center"
                        android:text="深圳"
                        android:textColor="@drawable/location_text_color" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:clickable="true"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:textColor="@drawable/location_text_color"
                        android:background="@drawable/location_tv_frame_sel"
                        android:gravity="center"
                        android:text="杭州"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="40dp" />
                    <TextView
                        android:clickable="true"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:textColor="@drawable/location_text_color"
                        android:background="@drawable/location_tv_frame_sel"
                        android:layout_marginLeft="20dp"
                        android:gravity="center"
                        android:text="重庆"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="40dp" />

                    <TextView
                        android:clickable="true"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:textColor="@drawable/location_text_color"
                        android:id="@+id/textView"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/location_tv_frame_sel"
                        android:gravity="center"
                        android:text="南京" />

                    <TextView
                        android:clickable="true"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:textColor="@drawable/location_text_color"
                        android:background="@drawable/location_tv_frame_sel"
                        android:layout_marginLeft="20dp"
                        android:gravity="center"
                        android:text="武汉"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="40dp" />
                </LinearLayout>
            <ListView
                android:divider="@null"
                android:scrollbars="none"
                android:id="@+id/lv_location"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <ListView
            android:scrollbars="none"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:id="@+id/lv_location_nav"
            android:divider="@null"
            android:layout_width="20dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
