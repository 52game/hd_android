<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:ratingbar="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/bg_background"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/regular_dimen_x5"
        android:layout_marginRight="@dimen/regular_dimen_x5"
        android:layout_marginTop="@dimen/regular_dimen_x10"
        android:background="@drawable/bg_list_home_recommand_top"
        android:orientation="horizontal"
        android:padding="@dimen/regular_dimen_x15"
        >

        <ImageView
            android:id="@+id/tvCover"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:background="#ff0000"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="@dimen/regular_dimen_x10"
            android:paddingRight="@dimen/regular_dimen_x10"
            >

            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_14"
                android:text="保姆月嫂"
                />

            <TextView
                android:id="@+id/tvDes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="3"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_12"
                android:text="专业家政服务8年，用心服务，服务类型有：母婴护理师、专业护理产妇以及新生儿，集保姆、护士集保姆、护士集保姆、护士集保姆、护士"
                />

            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_10"
                android:text="江阴-河西万达旁"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/ivSms"
                android:layout_width="@dimen/regular_dimen_x30"
                android:layout_height="@dimen/regular_dimen_x30"
                android:src="@mipmap/ic_launcher"
                />

            <ImageView
                android:id="@+id/ivTel"
                android:layout_width="@dimen/regular_dimen_x30"
                android:layout_height="@dimen/regular_dimen_x30"
                android:layout_marginTop="@dimen/regular_dimen_x20"
                android:src="@mipmap/ic_launcher"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/regular_dimen_x10"
        android:layout_marginRight="@dimen/regular_dimen_x10"
        android:background="@drawable/bg_list_home_recommand_bottom"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/regular_dimen_x10"
        android:paddingLeft="@dimen/regular_dimen_x10"
        android:paddingRight="@dimen/regular_dimen_x10"
        android:paddingTop="@dimen/regular_dimen_x10"
        >

        <ImageView
            android:id="@+id/ivHead"
            android:layout_width="@dimen/regular_dimen_x35"
            android:layout_height="@dimen/regular_dimen_x35"
            android:background="#ff0000"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/regular_dimen_x6"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tvUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Joney"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_12"
                />

            <TextView
                android:id="@+id/tvGrade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/regular_dimen_x5"
                android:background="@drawable/bg_list_home_grade"
                android:paddingLeft="@dimen/regular_dimen_x3"
                android:paddingRight="@dimen/regular_dimen_x3"
                android:text="信任值80分"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_8"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/regular_dimen_x3"
                android:paddingLeft="@dimen/regular_dimen_x5"
                android:paddingRight="@dimen/regular_dimen_x5"
                android:paddingTop="@dimen/regular_dimen_x3"
                android:text="实名认证"
                android:textSize="@dimen/text_size_10"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/regular_dimen_x3"
                android:paddingLeft="@dimen/regular_dimen_x5"
                android:paddingRight="@dimen/regular_dimen_x5"
                android:paddingTop="@dimen/regular_dimen_x3"
                android:text="资质认证"
                android:textSize="@dimen/text_size_10"
                />
        </LinearLayout>

        <com.haidaoservice.yhs.widget.StarBar
            android:id="@+id/starBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            ratingbar:starCount="5"
            ratingbar:starDistance="@dimen/regular_dimen_x3"
            ratingbar:starEmpty="@drawable/ic_star_empty"
            ratingbar:starFill="@drawable/ic_star_full"
            ratingbar:starSize="@dimen/regular_dimen_x15"/>
    </LinearLayout>
</LinearLayout>