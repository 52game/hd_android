<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   xmlns:tools="http://schemas.android.com/tools"
                                   android:id="@+id/toolbar"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:background="@color/theme_color"
                                   android:minHeight="?attr/actionBarSize"
                                   android:paddingTop="@dimen/toolbar_padding_top"
                                   app:contentInsetStart="0dp"
                                   app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                                   app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    <TextView
        android:id="@+id/tvActionTitle"
        android:layout_width="wrap_content"
        android:layout_height="?attr/actionBarSize"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:maxLength="12"
        android:textColor="@android:color/white"
        android:textSize="@dimen/abc_text_size_title_material_toolbar"
        tools:text="@string/app_name"/>

    <TextView
        android:id="@+id/tvActionRight"
        style="?attr/toolbarNavigationButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="right|center_vertical"
        android:clickable="true"
        android:gravity="center"
        android:paddingLeft="@dimen/regular_dimen_x15"
        android:paddingRight="@dimen/regular_dimen_x15"
        android:text="编辑"
        android:textColor="@android:color/white"
        android:textSize="@dimen/abc_text_size_subtitle_material_toolbar"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/ivActionLeft"
        style="?attr/toolbarNavigationButtonStyle"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_gravity="left|center_vertical"
        android:layout_marginLeft="@dimen/regular_dimen_x4"
        android:padding="@dimen/regular_dimen_x11"
        android:scaleType="centerInside"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/ivActionRight"
        style="?attr/toolbarNavigationButtonStyle"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="@dimen/regular_dimen_x4"
        android:padding="@dimen/regular_dimen_x11"
        android:scaleType="centerInside"
        android:visibility="visible"/>


</android.support.v7.widget.Toolbar>