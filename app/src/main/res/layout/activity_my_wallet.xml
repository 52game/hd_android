<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.haidaoservice.yhs.ui.my.MyWalletActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/signBg"
        android:orientation="vertical"
        >

        <include layout="@layout/partial_action_bar"/>
       <LinearLayout
           android:gravity="center"
           android:orientation="vertical"
           android:layout_weight="1"
           android:layout_width="match_parent"
           android:layout_height="0dp">
           <TextView
               android:id="@+id/tv_my_wallet_money"
               android:textSize="30dp"
               android:textColor="@color/sign_text_white"
               android:layout_centerInParent="true"
               android:text="8888.89"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
           <TextView
               android:textColor="@color/my_wallet"
               android:text="账户余额"
               android:layout_centerHorizontal="true"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
       </LinearLayout>
       <LinearLayout
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView
               android:id="@+id/tv_my_wallet_recharge"
               android:textColor="@color/sign_text_white"
                android:gravity="center"
               android:text="充值"
               android:layout_weight="1"
               android:layout_width="0dp"
               android:layout_height="40dp" />
           <TextView
               android:layout_marginBottom="@dimen/regular_dimen_x5"
               android:layout_marginTop="@dimen/regular_dimen_x5"
               android:background="#007DFF"
               android:layout_width="@dimen/regular_dimen_x1"
               android:layout_height="match_parent" />
           <TextView
               android:id="@+id/tv_my_wallet_income_code"
               android:textColor="@color/sign_text_white"
                android:gravity="center"
               android:text="收款码"
               android:layout_weight="1"
               android:layout_width="0dp"
               android:layout_height="40dp" />
           <TextView
               android:layout_marginBottom="@dimen/regular_dimen_x5"
               android:layout_marginTop="@dimen/regular_dimen_x5"
               android:background="#007DFF"
               android:layout_width="@dimen/regular_dimen_x1"
               android:layout_height="match_parent" />
           <TextView
               android:id="@+id/tv_my_wallet_withdrawals"
               android:textColor="@color/sign_text_white"
                android:gravity="center"
               android:text="提现"
               android:layout_weight="1"
               android:layout_width="0dp"
               android:layout_height="@dimen/regular_dimen_x40" />
       </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:paddingTop="@dimen/regular_dimen_x5"
        android:orientation="vertical"
        >
    <LinearLayout
        android:id="@+id/ll_my_wallet_bankcard"
        android:background="@color/sign_text_white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/regular_dimen_x50">
        <ImageView
            android:padding="@dimen/regular_dimen_x8"
            android:src="@mipmap/ic_launcher"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:textSize="@dimen/regular_dimen_x18"
            android:gravity="center_vertical"
            android:text="我的银行卡"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <ImageView
            android:layout_marginLeft="@dimen/regular_dimen_x8"
            android:padding="@dimen/regular_dimen_x8"
            android:src="@mipmap/ic_launcher"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <LinearLayout
            android:id="@+id/ll_my_wallet_payment_safe"
            android:background="@color/sign_text_white"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/regular_dimen_x50">
            <ImageView
                android:padding="@dimen/regular_dimen_x8"
                android:src="@mipmap/ic_launcher"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <TextView
                android:textSize="@dimen/regular_dimen_x18"
                android:gravity="center_vertical"
                android:text="支付安全"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <ImageView
                android:layout_marginLeft="@dimen/regular_dimen_x16"
                android:padding="@dimen/regular_dimen_x8"
                android:src="@mipmap/ic_launcher"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>
        <TextView

            android:layout_width="match_parent"
            android:layout_height="@dimen/regular_dimen_x10" />
        <LinearLayout
            android:id="@+id/ll_my_wallet_gold"
            android:background="@color/sign_text_white"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/regular_dimen_x50">
            <ImageView
                android:padding="@dimen/regular_dimen_x8"
                android:src="@mipmap/ic_launcher"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <TextView
                android:textSize="@dimen/regular_dimen_x18"
                android:gravity="center_vertical"
                android:text="我的金币"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <ImageView
                android:layout_marginLeft="@dimen/regular_dimen_x16"
                android:padding="@dimen/regular_dimen_x8"
                android:src="@mipmap/ic_launcher"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>
